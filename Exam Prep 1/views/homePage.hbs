{{#if isLoggedIn}}
<h1 class="text-center">Courses</h1>
<section>
    <a href="/course/create" class="btn btn-warning ">Create Course</a>
    <form class="search float-right">
        <label>Search: </label>
        <input type="text">
        <input type="submit" class="btn btn-info" value="Search">
    </form>
</section>
{{else}}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Video Tutorials</h1>
        <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
    </div>
</div>
{{/if}}

{{#if courses}}
<div class="container mt-3">
    <div class="row ">
        <div class="card-deck d-flex justify-content-center">
            {{#each courses}}

            <div class="card mb-4">
                <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                <div class="card-body">
                    <h4 class="card-title">{{title}}</h4>
                </div>
                <div class="card-footer">
                    {{#if ../isLoggedIn}}
                    <a href="/course/details/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                    <small class="float-right">{{createdAt}}</small>
                    {{/if}}
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</div>
{{else}}
<h3 class="text-center">No courses...</h3>
{{/if}}